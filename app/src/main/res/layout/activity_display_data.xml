<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/grad_bg"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="557dp"
        android:layout_marginBottom="83dp"
        android:text="Next"
        android:textSize="23sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/jsonTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/jsonTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/jsonTextView2"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/jsonTextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/jsonTextView3"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/jsonTextView4"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/jsonTextView5"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/jsonTextView7"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView6"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/jsonTextView7"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/jsonTextView1"
        android:layout_marginTop="20dp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="230dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.453" />

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="178dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-9dp"
        android:layout_marginBottom="634dp"
        android:text="Fetch Data"
        android:textSize="23sp"
        android:textStyle="bold" />


</RelativeLayout>